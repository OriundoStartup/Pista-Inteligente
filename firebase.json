{
    "hosting": {
        "site": "pista-inteligente",
        "public": "static",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "headers": [
            {
                "source": "**",
                "headers": [
                    {
                        "key": "X-Content-Type-Options",
                        "value": "nosniff"
                    },
                    {
                        "key": "X-Frame-Options",
                        "value": "DENY"
                    },
                    {
                        "key": "Strict-Transport-Security",
                        "value": "max-age=31536000; includeSubDomains"
                    },
                    {
                        "key": "Referrer-Policy",
                        "value": "strict-origin-when-cross-origin"
                    }
                ]
            },
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp|ico)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            },
            {
                "source": "**/*.@(css|js)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=604800"
                    }
                ]
            },
            {
                "source": "**/*.@(woff|woff2|ttf|eot)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "public, max-age=31536000, immutable"
                    }
                ]
            }
        ],
        "rewrites": [
            {
                "source": "**",
                "run": {
                    "serviceId": "pista-inteligente",
                    "region": "us-central1"
                }
            }
        ]
    }
}